// Localização: backend/prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id          String   @id @default(uuid())
  name        String
  email       String   @unique
  password    String
  role        String
  department  String
  operation   String?  // <-- Verifique se esta linha está aqui e salva
  isAdmin     Boolean  @default(false)
  status      String   @default("active")
  managerId   String?
  manager     User?    @relation("ManagerStaff", fields: [managerId], references: [id])
  staff       User[]   @relation("ManagerStaff")
}

model Task {
  id        String   @id
  title     String
  user      String
  status    String
  priority  String
  deadline  String
  createdAt DateTime @default(now())
  history   TaskHistory[]
}

model TaskHistory {
  id        Int      @id @default(autoincrement())
  taskId    String
  task      Task     @relation(fields: [taskId], references: [id])
  user      String
  text      String
  type      String
  date      String
  fileUrl   String?
  fileName  String?
}

model Notification {
  id        Int      @id @default(autoincrement())
  userId    String
  text      String
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
}

model AgendaEvent {
  id        String   @id @default(uuid())
  userId    String
  title     String
  date      String
  completed Boolean  @default(false)
}