generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./database/samsung_vendas.db"
}

model Task {
  id        String        @id
  title     String
  user      String
  status    String
  priority  String
  deadline  String
  source    String?
  createdAt DateTime      @default(now())
  
  // === HIERARQUIA (PAI E FILHO) ===
  parentId  String?       
  parent    Task?         @relation("TaskHierarchy", fields: [parentId], references: [id]) 
  subTasks  Task[]        @relation("TaskHierarchy") 
  // ================================

  history   TaskHistory[]
}

model Notification {
  id        Int      @id @default(autoincrement())
  userId    String
  text      String
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
  User      User     @relation(fields: [userId], references: [id])
}

model AgendaEvent {
  id        String  @id @default(uuid())
  userId    String
  title     String
  date      String
  completed Boolean @default(false)
  User      User    @relation(fields: [userId], references: [id])
}

model TaskHistory {
  id       Int     @id @default(autoincrement())
  text     String
  user     String
  date     String
  type     String
  taskId   String
  fileUrl  String?
  fileName String?
  Task     Task    @relation(fields: [taskId], references: [id], onDelete: Cascade)
}

model Announcement {
  id        String   @id @default(uuid())
  title     String
  content   String
  author    String
  priority  String   @default("Normal")
  category  String   @default("Aviso") // "Aviso", "Dica" ou "Agenda"
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
}
model DeptMessage {
  id         String   @id @default(uuid())
  content    String
  author     String
  department String
  createdAt  DateTime @default(now())
}

model Finance {
  id          String   @id @default(uuid())
  supplier    String
  description String
  category    String
  unit        String
  payer       String?  // <--- O campo novo continua aqui
  value       Float    // <--- VOLTAMOS PARA FLOAT (Para não dar erro)
  issueDate   DateTime
  dueDate     DateTime
  status      String   @default("PENDENTE")
  
  // Campos de Inteligência (Recorrência)
  isRecurring       Boolean  @default(false)
  totalInstallments Int      @default(1)
  currentInstallment Int     @default(1)
  groupId           String?  
  type String @default("EXPENSE") // Vai ser 'EXPENSE' ou 'INCOME'
  
  createdAt   DateTime @default(now())
}

model Stock {
  id             String   @id @default(uuid())
  cnpj           String
  storeName      String   // Nome Fantasia da Loja
  productCode    String   // Código do Produto
  reference      String?  // Referência
  description    String   // Descrição
  category       String?  // Categoria
  quantity       Float    // Quantidade em Estoque
  costPrice      Float    // Preço de Custo
  salePrice      Float?   // Preço de Venda
  averageCost    Float?   // Custo Médio
  updatedAt      DateTime @default(now())
}

model User {
  id            String         @id @default(uuid())
  name          String
  email         String         @unique
  password      String
  role          String         // CEO, DIRETOR, ADM, LOJA
  department    String
  allowedStores String?        // NOVO: "Loja A, Loja B" (Pode ser nulo para ADM/CEO)
  isAdmin       Boolean        @default(false)
  status        String         @default("active")
  managerId     String?
  operation     String?
  AgendaEvent   AgendaEvent[]
  Notification  Notification[]
  manager       User?          @relation("ManagerStaff", fields: [managerId], references: [id])
  staff         User[]         @relation("ManagerStaff")
}